<div class="container">
  <% @albums.each do |album| %>
    <div class="row">
      <div class="large-6 medium-6 small-12 columns">
      <% if album.photos.first != nil %>
        <%= link_to image_tag(album.photos.first.upload_image), album %>
      <% else %>
        <%= 'This album does not contain any photos!' %>
      <% end %>

      </div>
      <div class="large-6 medium-6 small-12 columns">
        <h2>Album: <%= album.name %></h2>
        <%= album.desc %>
        <br>
        <%= link_to 'Show Album  |', album %>
        <%= link_to '  Edit Album  |', edit_album_path(album) %>
        <%= link_to '  Delete Album', album, method: :delete, data: { confirm: 'Are you sure?' } %>
        <br>
        <br>
        <br>
        <br>
      </div>
    </div>
  <% end %>
</div>

