<%= form_for(@photo) do |f| %>
  <% if @photo.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this location from being saved:</h2>
      <ul>
        <% @photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

  <% end %>
 
  <div class="formcontainer"> 
    <div class="field">
      <%= f.label :album %>
      <%= collection_select(:photo, :album_id, current_user.albums,:id, :name) %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :desc %>
    </div>

    <div class="field">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>

    <div class="field">
      <%= f.label :techincal %>
      <%= f.text_field :tech %>
    </div>

     <div class="field">
        <%= f.label :public %>
        <%= f.check_box :public %>
     </div>

     <div class="field">
       <%= f.label :upload_image %>
       <%= f.file_field :upload_image %>
     </div>

     <div class="actions">
      <%= f.submit %>
    </div>
  </div>
  
<% end %>
